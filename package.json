{
  "name": "kidso-demo",
  "homepage":"https://github.com/vasil-sarandev/interview-task-1",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@craco/craco": "^6.4.3",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/gh-pages": "^3.2.0",
    "@types/history": "^4.7.9",
    "@types/jest": "^26.0.15",
    "@types/nanoid": "^3.0.0",
    "@types/node": "^12.0.0",
    "@types/node-sass": "^4.11.2",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-modal": "^3.13.1",
    "@types/react-router-dom": "^5.3.2",
    "gh-pages": "^3.2.3",
    "history": "5",
    "nanoid": "^3.1.30",
    "node-sass": "6.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-modal": "^3.14.4",
    "react-router-dom": "6",
    "react-scripts": "4.0.3",
    "typescript": "^4.5.3",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "eject": "react-scripts eject",
    "predeploy": "craco build", 
    "deploy": "gh-pages -d build",
    "format:check": "prettier -c src",
    "format:fix": "prettier -w src"
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "prettier",
      "plugin:import/typescript"
    ],
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "rules": {
      "jsx-a11y/click-events-have-key-events": [
        "off"
      ],
      "jsx-a11y/no-static-element-interactions": [
        "off"
      ],
      "no-unused-vars": "warn",
      "import/no-cycle": [
        "off"
      ],
      "import/prefer-default-export": [
        "off"
      ],
      "react/require-default-props": [
        "off"
      ],
      "react/jsx-filename-extension": [
        0,
        {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      ],
      "react/jsx-props-no-spreading": [
        "off"
      ],
      "import/extensions": [
        0,
        {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      ],
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ],
      "react/function-component-definition": [
        "error",
        {
          "namedComponents": "arrow-function"
        }
      ],
      "react/react-in-jsx-scope": "off"
    },
    "settings": {
      "import/resolver": {
        "alias": {
          "map": [
            [
              "@shared",
              "./src/shared"
            ],
            [
              "@pages",
              "./src/pages"
            ],
            [
              "@routes",
              "./src/routes"
            ],
            [
              "@api",
              "./src/api"
            ],
            [
              "@assets",
              "./assets"
            ]
          ],
          "extensions": [
            ".ts",
            ".tsx",
            ".js",
            ".jsx",
            ".json"
          ]
        }
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/eslint-config-prettier": "^6.11.0",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/prettier": "^2.4.2",
    "craco-alias": "^3.0.1",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.5.1"
  }
}
